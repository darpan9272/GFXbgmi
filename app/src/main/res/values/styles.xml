<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/m3_ref_palette_white</item>
        <item name="colorPrimaryDark">@color/m3_ref_palette_white</item>
        <item name="colorAccent">@color/m3_ref_palette_white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/m3_ref_palette_black</item>
        <item name="android:textColorSecondary">@color/m3_ref_palette_black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyDarkToolbarStyle" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="background">?android:selectableItemBackground</item>
        <item name="android:popupBackground">@color/m3_ref_palette_white</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@color/m3_ref_palette_black</item>
        <item name="android:overlapAnchor">true</item>
    </style>

   <style name="spinnerTheme">
    <item name="android:popupBackground">@drawable/custom_popup</item>
</style>

</resources>